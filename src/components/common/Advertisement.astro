---
interface Props {
    size?: 's' | 'm' | 'l';
}
const {size='s'} = Astro.props;

const adData = {
    s: 'e1e5398aa8ca972b65698449d0da0cfb',
    m: '95f151d5688017250c7c95003abbbbd9',
    l: 'a1cebbffb885b81982438fe98b956a05'
};

const adId = adData[size];
---
<div class="w-full flex justify-center" data-astro-reload>
    <div class="admax-ads" data-admax-id={adId} style="display:inline-block;"></div>
    <script type="text/javascript">(admaxads = window.admaxads || []).push({admax_id: adId, type: "banner"});</script>
    <script type="text/javascript" charset="utf-8" src="https://adm.shinobi.jp/st/t.js" async></script>
</div>