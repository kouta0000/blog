---
import { Icon } from 'astro-icon/components';

export interface Props {
  icon?: string;
  title?: string;
  description?: string;
}

const {
  icon = 'tabler:info-square',
  title = await Astro.slots.render('title'),
  description = await Astro.slots.render('description'),
} = Astro.props;
---

<section class="not-prose px-10">
  <div class="max-w-6xl mx-auto sm:px-6 py-4 text-md text-center font-medium bg-white rounded-2xl hover:bg-blue-300/80">
    <Icon name={icon} class="w-5 h-5 inline-block align-text-bottom font-bold mr-2" />
    <span class="font-bold" set:html={title} />
    <Fragment set:html={description} />
  </div>
</section>
