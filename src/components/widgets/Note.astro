---
import { Icon } from 'astro-icon/components';

export interface Props {
  icon?: string;
  title?: string;
  description?: string;
}

const {
  icon = 'tabler:info-square',
  title = await Astro.slots.render('title'),
  description = await Astro.slots.render('description'),
} = Astro.props;
---

<section class="not-prose px-10">
  <div class="mx-auto px-6 py-4 text-md text-center font-light rounded-2xl my-4 bg-white/50 dark:bg-gray-800">
    <Icon name={icon} class="w-5 h-5 inline-block align-text-bottom font-bold mr-2" />
    <span class="" set:html={title} />
    <Fragment set:html={description} />
  </div>
</section>
