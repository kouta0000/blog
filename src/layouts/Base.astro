---
import BaseHead from "@/components/BaseHead.astro";
import SkipLink from "@/components/SkipLink.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import { siteConfig } from "@/site.config";
import type { SiteMeta } from "@/types";
import ThemeToggle from "@/components/ThemeToggle.astro";
import ColorPalet from "@/components/blog/ColorPalet.svelte";
import { Icon } from "astro-icon/components";

interface Props {
	meta: SiteMeta;
}

const {
	meta: { articleDate, description = siteConfig.description, ogImage, title },
} = Astro.props;
---

<html lang={siteConfig.lang} class="p-0">
	<head>
		<BaseHead articleDate={articleDate} description={description} ogImage={ogImage} title={title} />
	</head>
	<body>
		<ThemeProvider />
		<SkipLink />
		<Header />
		<div class="fab">
	<!-- a focusable div with tabindex is necessary to work on all browsers. role="button" is necessary for accessibility -->
	<div tabindex="0" role="button" class="mask mask-squircle shadow-lg size-12 p-1 bg-accent-base/10">
		<Icon name="mingcute:settings-6-fill" class="size-full p-2" />
	</div>
  
	<div class="bg-accent-base/10 rounded-full">
		<a href="/admin/index.html">
			<Icon name="ri:admin-line"  class="size-16 p-4"/>
		</a>
		</div>
		<div class="bg-accent-base/10 rounded-full size-16">
		<ColorPalet client:only />
		</div>
		<div class="bg-accent-base/10 rounded-full size-16">
			<ThemeToggle />
		</div>
	</div>
  </div>
		<div class="flex w-full md:px-10 md:pt-16">
			<!-- Sidebar for Docs Series -->
			<slot name="sidebar" />
			<!-- Main container for the page content -->
			
			<div  class="w-full sm:w-4/5 lg:w-3/5 mx-auto px-6">
				<div class="m-auto min-h-screen">
					
					<main  class="mt-32 md:mt-[3.5rem] headings:fontbold">
						<slot />
					</main>
					<Footer />
				</div>
			</div>
		</div>
	</body>
</html>
