---
import BaseHead from "@/components/BaseHead.astro";
import SkipLink from "@/components/SkipLink.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import { siteConfig } from "@/site.config";
import type { SiteMeta } from "@/types";
import ThemeToggle from "@/components/ThemeToggle.astro";
import ColorPalet from "@/components/blog/ColorPalet.svelte";
import { Icon } from "astro-icon/components";

interface Props {
	meta: SiteMeta;
}

const {
	meta: { articleDate, description = siteConfig.description, ogImage, title },
} = Astro.props;
---

<html
	class="overflow-x-hidden grid font-jp text-textColor antialiased p-0"
	lang={siteConfig.lang}
>
	<head>
		<BaseHead articleDate={articleDate} description={description} ogImage={ogImage} title={title} />
	</head>
	<body class="min-w-4xl m-auto min-h-screen w-full max-w-6xl grow bg-bgColor m-0 relative">
		<ThemeProvider />
		<SkipLink />
		{ title == "Home" && (
		<div class="fab">
			<div tabindex="0" role="button" class="">
				<Icon name="mingcute:settings-6-fill" class="size-full text-base/10 size-14 p-4 bg-accent-base/10 rounded-full" />
			</div>
		  
			
			
			
			<div class="bg-accent-base/10 rounded-full">
			<a href="/admin/index.html">
				<Icon name="ri:admin-line"  class="size-14 p-4"/>
			</a>
			</div>
			<div class="bg-accent-base/10 rounded-full p-3">
			<ColorPalet />
			</div>
			<div class="bg-accent-base/10 rounded-full p-3">
				<ThemeToggle />
			</div>
		  </div>
		  )
		}
		<div class="flex min-h-screen w-full">
			<!-- Sidebar for Docs Series -->
			<slot name="sidebar" />
			<!-- Main container for the page content -->
			
			<div id="container" class="min-w-3xl m-auto max-w-4xl">
				<div class="m-auto grid min-h-screen md:grid-rows-[auto_auto_1fr] px-4 md:px-8 md:pt-4">
					<Header />
					<main id="main" class="mt-32 md:mt-[3.5rem] ">
						<slot />
					</main>
					<Footer />
				</div>
			</div>
		</div>
	</body>
</html>
