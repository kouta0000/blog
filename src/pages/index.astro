---
export const prerender = true;
import { type CollectionEntry, getCollection } from "astro:content";
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import Note from "@/components/note/Note.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";
import { Icon } from "astro-icon/components";
import ColorPalet from '@/components/blog/ColorPalet.svelte';
import ThemeToggle from "@/components/ThemeToggle.astro";


// Posts
const MAX_POSTS = 6;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Notes
const MAX_NOTES = 4;
const allNotes = await getCollection("note");
const latestNotes = allNotes.sort(collectionDateSort).slice(0, MAX_NOTES);
---

<PageLayout meta={{ title: "Home", ogImage:'/assets/images/generalog.jpg' }}>
	<!-- Hero section -->
	<!-- Background blur -->

	<section class="w-full  relative flex items-center justify-center h-screen -mt-24">
		<div class="w-full text-center">
			<span class="title text-3xl bg-gradient-to-r from-accent-one via-accent-one/85 to-accent-two/85 dark:from-accent-two dark:via-accent-one dark:to-accent-two bg-clip-text text-transparent">
				Salut !
			</span>
			<p class="mt-4 mb-4 text-lg font-medium">
				ある人間のブログ<br>
				ことばに関するそうだったのかという記事を書いています　単なる日々の雑文もあります
			</p>
			<div class="flex justify-center mb-4">
				<SocialList />
			</div>
			<div class="flex justify-center space-x-4 mt-4">
				<a href="/posts/" class="waves flex items-center justify-center h-8 px-4 rounded-lg shadow-lg hover:brightness-110 transition-all bg-gradient-to-r from-accent-base via-accent-one to-accent-two">
					<span class="text-bgColor font-semibold">
						記事を読む
					</span>
				</a>

				<a href="/notes/wake-up/" class="flex items-center justify-center h-8 px-4 rounded-lg shadow-lg bg-accent-two/10 hover:brightness-110 hover:bg-special-lightest">
					<span class="bg-clip-text text-transparent font-semibold bg-gradient-to-r from-accent-one to-accent-two">
						朝に...
					</span>
				</a>
				<a href="/notes/autumn/" class="flex items-center justify-center h-8 px-4 rounded-lg shadow-lg bg-accent-two/10 hover:brightness-110 hover:bg-special-lightest">
					<span class="bg-clip-text text-transparent font-semibold bg-gradient-to-r from-accent-one to-accent-two">
						秋に...
					</span>
				</a>
			</div>
		</div>
	</section>

	<!-- Posts Section -->
	<section aria-label="Blog post list" >
		<h2 class="title mb-8 text-xl text-accent-two flex items-center gap-3">
			<Icon name="mdi:event-note" class="size-7 opacity-80"/>
			<a href="/posts/">
				さいきんの記事
			</a>
		</h2>
		<ul class="space-y-4 md:space-y-2" role="list">
			{
				allPostsByDate.map((p,i) => (
					<li class="gap-2 sm:grid-cols-[auto_1fr]">
						<PostPreview post={p} />
						<hr class="h-1 w-full rounded-3xl bg-bgColor"/>
					</li>
				))
			}
		</ul>
		<div class="mt-8 flex justify-end">
		<a class="btn btn-ghost whitespace-nowrap rounded-full text-accent-base waves" href="/posts">
			すべての記事 <Icon name="mingcute:right-fill" class="size-full p-2" />
		</a>
		</div>
	</section>

	<!-- Notes Section -->
	{
		latestNotes.length > 0 && (
			<section class="mt-12">
				<h2 class="title mb-8 text-accent-two flex items-center gap-3">
					<Icon name="mdi:comment-text-outline" class="size-7 opacity-80"/>
					<a href="/notes/">メモ</a>
				</h2>
				<div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
					{
						latestNotes.map((note) => (
							<div>
								<Note note={note} as="h4" isPreview />
								
							</div>
						))
					}
				</div>
				<div class="mt-8 flex justify-end">
		<a class="btn btn-ghost whitespace-nowrap rounded-full text-accent-base waves" href="/posts">
			すべてのメモ <Icon name="mingcute:right-fill" class="size-full p-2" />
		</a>
		</div>
			</section>
		)
	}


</PageLayout>

