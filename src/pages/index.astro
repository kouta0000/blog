---
export const prerender = true;
import { type CollectionEntry, getCollection } from "astro:content";
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import Note from "@/components/note/Note.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";
import ThemeToggle from "@/components/ThemeToggle.astro";
import ColorPalet from "@/components/blog/ColorPalet.svelte";
import { Icon } from "astro-icon/components";

// Posts
const MAX_POSTS = 12;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Notes
const MAX_NOTES = 4;
const allNotes = await getCollection("note");
const latestNotes = allNotes.sort(collectionDateSort).slice(0, MAX_NOTES);
---

<PageLayout meta={{ title: "Home" }}>
	<!-- Hero section -->
	<!-- Background blur -->

	<section class="max-w-xl mx-auto relative flex items-center justify-center h-screen -mt-24">
		<div class="w-full text-center">
			<span class="title text-3xl bg-gradient-to-r from-accent-one via-accent-two/85 to-accent-one/85 dark:from-accent-two dark:via-accent-one dark:to-accent-two bg-clip-text text-transparent">
				わたしのアタマの中
			</span>
			<p class="mt-4 mb-4 text-lg font-medium">
				ある人間のブログ<br>
				ことばに関するそうだったのかという記事を書いています　単なる日々の雑文もあります
			</p>
			<div class="flex justify-center mb-4">
				<SocialList />
			</div>
			<div class="flex justify-center space-x-4 mt-4">
				<a href="/posts/" class="relative flex items-center justify-center h-8 px-4 rounded-lg shadow-lg hover:brightness-110 transition-all bg-gradient-to-r from-accent-one/85 to-accent-one/40">
					<span class="text-bgColor font-semibold">
						記事を読む
					</span>
				</a>

				<a href="/notes/wake-up/" class="relative flex items-center justify-center h-8 px-4 rounded-lg shadow-lg bg-accent-two/10 hover:brightness-110 hover:bg-special-lightest">
					<span class="bg-clip-text text-transparent font-semibold bg-gradient-to-r from-accent-one to-accent-two">
						朝に...
					</span>
				</a>
				<a href="/notes/autumn/" class="relative flex items-center justify-center h-8 px-4 rounded-lg shadow-lg bg-accent-two/10 hover:brightness-110 hover:bg-special-lightest">
					<span class="bg-clip-text text-transparent font-semibold bg-gradient-to-r from-accent-one to-accent-two">
						秋に...
					</span>
				</a>
			</div>
		</div>
	</section>

	<!-- Posts Section -->
	<section aria-label="Blog post list" class="'mt-[-100vh] pt-[100vh]'">
		<h2 class="title mb-6 text-xl text-accent-two">
			<a href="/posts/">さいきんの記事</a>
		</h2>
		<ul class="space-y-4 md:space-y-2" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="gap-2 sm:grid-cols-[auto_1fr] pl-3">
						<PostPreview post={p} />
						<hr class="h-1 w-full rounded-3xl bg-bgColor"/>
					</li>
				))
			}
		</ul>
	</section>

	<!-- Notes Section -->
	{
		latestNotes.length > 0 && (
			<section class="mt-12">
				<h2 class="title mb-6 text-accent-two">
					<a href="/notes/">メモ</a>
				</h2>
				<div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
					{
						latestNotes.map((note) => (
							<div>
								<Note note={note} as="h4" isPreview />
								
							</div>
						))
					}
				</div>
			</section>
		)
	}

<div class="fab">
	<!-- a focusable div with tabindex is necessary to work on all browsers. role="button" is necessary for accessibility -->
	<div tabindex="0" role="button" class="">
		<Icon name="mingcute:settings-6-fill" class="size-full text-base/10 size-14 p-4 bg-accent-base/10 rounded-full" />
	</div>
  
	<!-- buttons that show up when FAB is open -->
	
	
	<div class="bg-accent-base/10 rounded-full">
	<a href="/admin/index.html">
		<Icon name="ri:admin-line"  class="size-14 p-4"/>
	</a>
	</div>
	<div class="bg-accent-base/10 rounded-full p-3">
	<ColorPalet />
	</div>
	<div class="bg-accent-base/10 rounded-full p-3">
		<ThemeToggle />
	</div>
  </div>
</PageLayout>

